.header
  .header__logo
    = icon('fas', 'book')
    = link_to "BookLife", books_path 
.newContents
  .newContainer
    = form_with(model: @book, local: true) do |f|
      %h3
        新規投稿
      = f.text_field :title, autofocus: true, placeholder: "タイトル＊"
      = f.text_field :author, placeholder: "著者"
      = f.text_field :publisher, placeholder: "出版社"
      .image
        = f.text_field :image, placeholder: "画像を選択＊"
        %label
          = icon('fa','image',class: 'icon')
          .image__file
            = f.file_field :image
      = f.text_area :review, placeholder: "レビューを書く＊" , rows: "10"
      %h4
        *は必須
      .postBtn 
        = f.submit "投稿する"
